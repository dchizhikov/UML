@startuml
object "Покупатель" as Customer{
    +id: Integer
    +имя: String
    +email: String
    +createOrder(Order)
} 

object "Товар" as Product{
    +id: Integer
    +название: String
    +цена: Float
    +addProduct(Product)
}

object "Заказ" as Order{
    +id: Integer
    +дата: Date
    +статус: String
    +addProduct(Product)
}

object "Поставщик" as Provider{
    +id: Integer
    +название: String
    +контакты: String
}

Customer "1" --> "0..*" Order : делает >
Order "0..*" *- "1..*" Product : включает >
Product "0..*" <-up- "1" Provider : поставляет <
Product "1" *--> "1..*" Product : состоит
@enduml
