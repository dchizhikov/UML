@startuml
left to right direction

actor "Методист СПО/\nРазработчик контента" as ContentDeveloper
actor "Преподаватель СПО/\nУчитель" as Teacher
actor "Студент СПО/\nУчащийся" as Student
actor "Куратор" as Curator

package "Общие кейсы" {
    (Просмотр каталога курсов) as UC1
    (Фильтрация курсов) as UC2
    (Просмотр прогресса по курсу) as UC3
}

package "Кейсы администрирования курсов" {
    (Формирование карточки курса) as UC4
    (Формирование структуры курса) as UC5
    (Наполнение курса контентом) as UC6
    (Публикация курса) as UC7
    (Редактирование курса) as UC8
    (Архивирование курса) as UC9
}

package "Кейсы управления обучением" {
    (Назначение курса студентам) as UC10
    (Оценивание заданий курса) as UC11
    (Выгрузка информации о прогрессе) as UC12
}

package "Кейсы обучения" {
    (Самостоятельная запись на курс) as UC13
    (Запись на курс по назначению - ???) as UC14
    (Просмотр своих курсов) as UC15
    (Выполнение заданий) as UC16
}

package "Кейсы курирования обучения" {
    (Просмотр списка студентов на курсе - ???) as UC17
}

' Связи между актерами и пакетами
ContentDeveloper --> "Кейсы администрирования курсов"
Teacher --> "Кейсы управления обучением"
Student --> "Кейсы обучения"
Curator --> "Кейсы курирования обучения"

' Скрытые связи для управления порядком
UC1 -[hidden]-> UC2
UC2 -[hidden]-> UC3

UC4 -[hidden]-> UC5
UC5 -[hidden]-> UC6
UC6 -[hidden]-> UC7
UC7 -[hidden]-> UC8
UC8 -[hidden]-> UC9

UC10 -[hidden]-> UC11
UC11 -[hidden]-> UC12

UC13 -[hidden]-> UC14
UC14 -[hidden]-> UC15
UC15 -[hidden]-> UC16

UC17 -[hidden]-> UC17

' Скрытые связи между ролями для вертикального расположения
ContentDeveloper -[hidden]-> Teacher
Teacher -[hidden]-> Student
Student -[hidden]-> Curator

@enduml
