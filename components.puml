@startuml
!procedure $structures($names, $arg)
  component $names.id[0] as system_1 <<subsystem>>{
  !while $arg!=0
    !$arg1=$arg - 1
    !$name=$names.name[$arg1]
    [$name]
    !$arg = $arg - 1
  !endwhile
}
!endprocedure


!procedure $components($names, $arg)
  !while $arg!=0
    !$arg1=$arg - 1
    !$name=$names.name[$arg1]
    !$ps_name = $names.id[0]+"_comp_"+$arg
    [$name] as $ps_name <<subsystem>>
    !$arg = $arg - 1
  !endwhile
!endprocedure

!procedure $interfaces($names, $arg)
  !while $arg!=0
    !$arg1=$arg - 1
    !$name=$names.name[$arg1]
    !$ps_name = "iF_"+$arg
    () "$name" as $ps_name
    !$arg = $arg - 1
  !endwhile
!endprocedure
@enduml
